<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cookie page</title>
    <style>
      body {
        background-color: lightblue;
      }
    </style>
  </head>
<body>
  <div class="details content">
    <h2>Cookie details:</h2>
    <div class="content">
      <p><%= cookie.cookieName %></p>
      <p><%= cookie.cookieRecepie %></p>
      <p><%= cookie.cookieSummeary %></p>
    </div>
    <a class="delete" data-cookie="<%= cookie._id %>">delete</a>
  </div>


  <script>
    const trashcan = document.querySelector('a.delete');
    trashcan.addEventListener('click', (e) => {
      const endpoint = `/cookie/${trashcan.dataset.cookie}`;
      fetch(endpoint, {
        method: 'DELETE',
      })
      .then(response => response.json())
      .then(data => window.location.href = data.redirect)
      .catch(err => console.log(err));
    });

  </script>
</body>
</html>
